<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/y7"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/y4"
    app:contentPadding="@dimen/y7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/y5">


        <ImageView
            android:id="@+id/iv_navigation_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_navigation_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y5"
            android:textColor="@color/black" />

    </RelativeLayout>
</android.support.v7.widget.CardView>