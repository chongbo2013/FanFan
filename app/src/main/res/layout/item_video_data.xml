<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x80"
    android:orientation="vertical"
    android:padding="@dimen/y8">

    <ImageView
        android:id="@+id/iv_video_image"
        android:layout_width="@dimen/x60"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/y8"
        android:layout_toRightOf="@+id/iv_video_image"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/show_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/x9" />

            <TextView
                android:id="@+id/save_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textSize="@dimen/x6" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_video_url"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:lines="2"
            android:textSize="@dimen/x7" />
    </LinearLayout>
</RelativeLayout>