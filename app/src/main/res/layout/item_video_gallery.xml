<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/y200"
    android:layout_height="@dimen/y180"
    android:layout_margin="@dimen/y7"
    app:cardBackgroundColor="@color/video_introduction_bar"
    app:cardCornerRadius="@dimen/y4"
    app:contentPadding="@dimen/y7">

    <RelativeLayout
        android:id="@+id/rl_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/y5">

        <TextView
            android:id="@+id/tv_showtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_video_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_showtitle"
            android:layout_marginTop="@dimen/y5" />


    </RelativeLayout>
</android.support.v7.widget.CardView>